<title><%= title %></title>
<link rel="stylesheet" href="/assets/css_files/images.css">

<div class="container mgn-top">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title" style="text-align: center;">Upload Photo</h5>
      </div>
      <div class="card-body" style="text-align: center;" >
        <form id="uploadForm" action="/userImage/upload-image" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label for="photos" class="font-weight-bold">
              <i class="fas fa-camera"></i> Choose a photo to upload:
            </label>
            <div class="custom-file">
              <input type="file" class="custom-file-input mt-2"  id="photo" name="imageUrl" accept="image/*" required>
              <label class="custom-file-label" for="photo">Select file </label>
            </div>
          </div>
          <div id="previewContainer"></div>
          <button type="submit" class="btn btn-primary mt-2">
            <i class="fas fa-upload"></i> Upload Photo
          </button>
        </form>
      </div>
    </div>
  </div>

<script src="/assets/script_files/images.js"></script>