<title> <%= title %> </title>
<link rel="stylesheet" href="/assets/css_files/resetPassword.css">

<div class="container mgn-top">
    <div class="password-reset-container">
      <h1>Password Reset</h1>
      <form action="/auth/reset-password?youruniqtoken=<%= token %>" method="post">
        <div class="form-group">
          <label for="password">New Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Enter your new password" required>
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm your new password" required>
        </div>
        <button type="submit" class="btn btn-reset w-100">Reset Password</button>
      </form>
    </div>
</div>